{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "semi": ["error", "never"],
        "@typescript-eslint/no-explicit-any": "warn",
        "quotes": ["error", "single"],
        "prettier/prettier": [
            "error",
            {
              "endOfLine": "auto"
            }
        ]
    }
}